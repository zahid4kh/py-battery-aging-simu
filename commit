#!/bin/bash

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
WHITE='\033[1;37m'
GRAY='\033[0;90m'
NC='\033[0m'

print_header() {
    local title="$1"
    local width=60
    local padding=$(((width - ${#title} - 2) / 2))

    echo -e "${CYAN}â•­$(printf 'â”€%.0s' $(seq 1 $((width-2))))â•®${NC}"
    printf "${CYAN}â”‚${NC}%*s${WHITE}%s${NC}%*s${CYAN}â”‚${NC}\n" $padding "" "$title" $padding ""
    echo -e "${CYAN}â•°$(printf 'â”€%.0s' $(seq 1 $((width-2))))â•¯${NC}"
}

print_section() {
    local title="$1"
    echo -e "\n${PURPLE}â”Œâ”€ ${WHITE}$title${NC}"
}

print_success() {
    echo -e "${GREEN}âœ… $1${NC}"
}

print_error() {
    echo -e "${RED}âŒ $1${NC}"
}

print_info() {
    echo -e "${BLUE}â„¹ï¸  $1${NC}"
}

print_warning() {
    echo -e "${YELLOW}âš ï¸  $1${NC}"
}

clear
print_header "ğŸš€ Git Commit Assistant"

print_section "ğŸ” Repository Check"
if [ ! -d .git ]; then
    print_error "Not a git repository (no .git folder found)"
    echo -e "\n${GRAY}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
    exit 1
fi
print_success "Valid git repository detected"

print_section "ğŸ“Š Change Detection"
if [[ -z $(git status -s) ]]; then
    print_info "No changes detected in the repository"
    echo -e "\n${GRAY}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
    exit 0
fi

print_section "ğŸ“ Changed Files"
echo -e "${GRAY}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
git status --short | while IFS= read -r line; do
    status="${line:0:2}"
    file="${line:3}"
    case "$status" in
        "M ") echo -e "${GRAY}â”‚${NC} ${YELLOW}ğŸ“ Modified:${NC}  $file" ;;
        "A ") echo -e "${GRAY}â”‚${NC} ${GREEN}â• Added:${NC}     $file" ;;
        "D ") echo -e "${GRAY}â”‚${NC} ${RED}ğŸ—‘ï¸  Deleted:${NC}   $file" ;;
        "??") echo -e "${GRAY}â”‚${NC} ${BLUE}ğŸ†• Untracked:${NC} $file" ;;
        "R ") echo -e "${GRAY}â”‚${NC} ${PURPLE}ğŸ”„ Renamed:${NC}   $file" ;;
        *) echo -e "${GRAY}â”‚${NC} ${CYAN}ğŸ“„ Changed:${NC}   $file" ;;
    esac
done
echo -e "${GRAY}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"

print_section "ğŸ“¦ Staging Files"
git add .
if [ $? -ne 0 ]; then
    print_error "Failed to add files to staging"
    echo -e "\n${GRAY}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
    exit 1
fi
print_success "All files staged successfully"

print_section "ğŸ’¬ Commit Message"
echo -e "${GRAY}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
echo -e "${GRAY}â”‚${NC} ${WHITE}Enter your commit message:${NC}"
echo -e "${GRAY}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
echo -ne "${CYAN}ğŸ“ ${NC}"
read commit_message

if [ -z "$commit_message" ]; then
    print_error "Commit message cannot be empty"
    echo -e "\n${GRAY}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
    exit 1
fi

print_section "ğŸ¯ Committing Changes"
echo -e "${GRAY}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
echo -e "${GRAY}â”‚${NC} ${WHITE}Commit message:${NC} \"$commit_message\""
echo -e "${GRAY}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"

git commit -m "$commit_message"
if [ $? -eq 0 ]; then
    echo -e "\n${GREEN}â•­â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•®${NC}"
    echo -e "${GREEN}â”‚${NC}                   ${WHITE}ğŸ‰ SUCCESS! ğŸ‰${NC}                     ${GREEN}â”‚${NC}"
    echo -e "${GREEN}â”‚${NC}            ${WHITE}Changes committed successfully${NC}            ${GREEN}â”‚${NC}"
    echo -e "${GREEN}â•°â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¯${NC}"
else
    echo -e "\n${RED}â•­â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•®${NC}"
    echo -e "${RED}â”‚${NC}                    ${WHITE}âŒ FAILED âŒ${NC}                      ${RED}â”‚${NC}"
    echo -e "${RED}â”‚${NC}              ${WHITE}Failed to commit changes${NC}              ${RED}â”‚${NC}"
    echo -e "${RED}â•°â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¯${NC}"
    exit 1
fi

echo -e "\n${GRAY}Thank you for using Git Commit Assistant! ğŸš€${NC}\n"